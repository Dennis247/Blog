@model CreateBlog
@{
    ViewData["Title"] = "AddBlog";
}

     <div class="container-fluid">
               <div class="row">
                     <div class="col-sm-12 col-lg-6">
          
                     <div class="iq-card">
                                 <div class="iq-card-header d-flex justify-content-between">
                                    <div class="iq-header-title">
                                       <h4 class="card-title">Create Blog</h4>
                                    </div>
                                 </div>
                                 <div class="iq-card-body">
                                    <form method="post" action="AddBlog"> 
            
                                       <div class=" row align-items-center">
                                          <div class="form-group col-sm-9">
                                             <label for="fname">Title:</label>
                                             <input type="text" class="form-control" id="Title" value="@Model.Title" required name="Title">
                                          </div>
                                      
                                          <div class="form-group col-sm-12">
                                             <label>Description:</label>
                                             <textarea class="form-control" name="Description" rows="5" style="line-height: 22px;" required>
                                                 @Model.Description
                                             </textarea>
                                          </div>
                                       </div>
                                       <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                       <button type="reset" class="btn iq-bg-danger">Cancel</button>
                                    </form>
                                 </div>
                              </div>
                     </div>
                  
                  </div>
             
               </div>
            </div>